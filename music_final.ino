void setup() {
  // Set pin modes
  pinMode(buttonPin, INPUT_PULLUP);
  pinMode(potPin, INPUT);

  // Start serial communication (optional)
  Serial.begin(9600);
}

void loop() {
  // Read button state
  int buttonState = digitalRead(buttonPin);

  // Check if button is pressed
  if (buttonState == LOW && !buttonPressed) {
    // Read potentiometer value
    potValue = analogRead(potPin);

    // Print the value or use it for other purposes
    Serial.println(potValue);
    if (potValue >= 800) {
      Merry();
    Serial.println("a \n");
    } else if (potValue >= 600) {
      cantina();
    Serial.println("b \n");
    } else if (potValue >= 400) {
      HarryPotter();
    Serial.println("c \n");
    } else if (potValue >= 200) {
      imperial();
    Serial.println("d\n");
    } else {
      Jiggly();
    Serial.println("e \n");
    }


    // Set flag to prevent immediate re-reading
    buttonPressed = true;
  } else if (buttonState == HIGH) {
    // Reset flag when button is released
    buttonPressed = false;
  }

  // Add a debounce delay if needed (optional)
  delay(10);
}

